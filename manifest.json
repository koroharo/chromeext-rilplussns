{
  "name": "ReadItLaterPlusSNS",
  "version": "0.1",
  "description": "ReadItLater+SNS",
  "icons":{
    "16" : "img/icon16.png",
    "48" : "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background_page": "ext_rilplussns_bg.html",
  "browser_action": {
    "default_icon": "img/icon19.png",
    "default_title": "RIL+SNS"
  },
  "content_scripts": [
    {
      "matches": ["*://readitlaterlist.com/a/*"],
      "run_at" : "document_start",
      "js"     : [
        "scripts/jquery-1.7.min.js",
        "ext_rilplussns_cnt.js"
      ],
      "css"    : ["ext_rilplussns.css"]
    }
  ],
  "permissions": [
    "tabs",
    "clipboardWrite",
    "*://readitlaterlist.com/*",
    "*://b.hatena.ne.jp/*"
  ]
}